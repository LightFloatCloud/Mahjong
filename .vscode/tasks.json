{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ 生成活动文件",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                //"${fileDirname}\\*.cpp",
                "${fileDirname}/cards_class.cpp",
                "${fileDirname}/player.cpp",
                "${fileDirname}/main.cpp",

                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                //"-fexec-charset=GBK"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}